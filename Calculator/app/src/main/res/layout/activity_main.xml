<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_background"
    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="408dp"
        android:layout_height="444dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.036"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonPercentile"
                    android:layout_width="62dp"
                    android:layout_height="61dp"
                    android:background="@drawable/custom_button"
                    android:gravity="center"
                    android:text="%"
                    android:textSize="25sp"
                    app:backgroundTint="#055E88"
                    app:backgroundTintMode="add" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonDivide"
                    android:layout_width="62dp"
                    android:layout_height="61dp"
                    android:background="@drawable/custom_button"
                    android:text="/"
                    android:textColorHint="#FFFEFE"
                    android:textSize="25sp"
                    app:backgroundTint="#023A55"
                    app:backgroundTintMode="add" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonClear"
                    android:layout_width="62dp"
                    android:layout_height="61dp"
                    android:background="@drawable/custom_button"
                    android:text="C"
                    android:textSize="25sp"
                    app:backgroundTint="#086897"
                    app:backgroundTintMode="add" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonClearEntry"
                    android:layout_width="62dp"
                    android:layout_height="61dp"
                    android:background="@drawable/custom_button"
                    android:text="CE"
                    android:textSize="18sp"
                    app:backgroundTint="#040A33"
                    app:backgroundTintMode="add" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button7"
                    android:layout_width="62dp"
                    android:layout_height="61dp"
                    android:background="@drawable/custom_button"
                    android:text="7"
                    android:textSize="25sp"
                    app:backgroundTint="#106E9C"
                    app:backgroundTintMode="add" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button8"
                    android:layout_width="62dp"
                    android:layout_height="61dp"
                    android:background="@drawable/custom_button"
                    android:text="8"
                    android:textSize="25sp"
                    app:backgroundTint="#023A55"
                    app:backgroundTintMode="add" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button9"
                    android:layout_width="62dp"
                    android:layout_height="61dp"
                    android:background="@drawable/custom_button"
                    android:text="9"
                    android:textSize="25sp"
                    app:backgroundTint="#023A55"
                    app:backgroundTintMode="add" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonMultiply"
                    android:layout_width="62dp"
                    android:layout_height="61dp"
                    android:background="@drawable/custom_button"
                    android:text="*"
                    android:textSize="25sp"
                    app:backgroundTint="#040A33"
                    app:backgroundTintMode="add" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button4"
                    android:layout_width="62dp"
                    android:layout_height="61dp"
                    android:background="@drawable/custom_button"
                    android:text="4"
                    android:textSize="25sp"
                    app:backgroundTint="#0F6188"
                    app:backgroundTintMode="add" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button5"
                    android:layout_width="62dp"
                    android:layout_height="61dp"
                    android:background="@drawable/custom_button"
                    android:text="5"
                    android:textSize="25sp"
                    app:backgroundTint="#023A55"
                    app:backgroundTintMode="add" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button6"
                    android:layout_width="62dp"
                    android:layout_height="61dp"
                    android:background="@drawable/custom_button"
                    android:text="6"
                    android:textSize="25sp"
                    app:backgroundTint="#040A33"
                    app:backgroundTintMode="add" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonSubstract"
                    android:layout_width="62dp"
                    android:layout_height="61dp"
                    android:background="@drawable/custom_button"
                    android:text="-"
                    android:textSize="25sp"
                    app:backgroundTint="#040A33"
                    app:backgroundTintMode="add" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button1"
                    android:layout_width="62dp"
                    android:layout_height="61dp"
                    android:background="@drawable/custom_button"
                    android:text="1"
                    android:textSize="25sp"
                    app:backgroundTint="#023A55"
                    app:backgroundTintMode="add" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button2"
                    android:layout_width="62dp"
                    android:layout_height="61dp"
                    android:background="@drawable/custom_button"
                    android:text="2"
                    android:textSize="25sp"
                    app:backgroundTint="#040A33"
                    app:backgroundTintMode="add" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button3"
                    android:layout_width="62dp"
                    android:layout_height="61dp"
                    android:background="@drawable/custom_button"
                    android:text="3"
                    android:textSize="25sp"
                    app:backgroundTint="#040A33"
                    app:backgroundTintMode="add" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonAdd"
                    android:layout_width="62dp"
                    android:layout_height="61dp"
                    android:background="@drawable/custom_button"
                    android:text="+"
                    android:textSize="25sp"
                    app:backgroundTint="#040A33"
                    app:backgroundTintMode="add" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonBrackets"
                    android:layout_width="59dp"
                    android:layout_height="59dp"
                    android:background="@drawable/custom_button"
                    android:gravity="center"
                    android:text="()"
                    android:textSize="25sp"
                    app:backgroundTint="#040A33"
                    app:backgroundTintMode="add" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button0"
                    android:layout_width="62dp"
                    android:layout_height="61dp"
                    android:background="@drawable/custom_button"
                    android:text="0"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    app:backgroundTint="#040A33"
                    app:backgroundTintMode="add" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonDel"
                    android:layout_width="62dp"
                    android:layout_height="61dp"
                    android:background="@drawable/custom_button"
                    android:text="."
                    android:textSize="25sp"
                    app:backgroundTint="#040A33"
                    app:backgroundTintMode="add" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonEquals"
                    android:layout_width="62dp"
                    android:layout_height="61dp"
                    android:background="@drawable/custom_button"
                    android:text="="
                    android:textSize="25sp"
                    app:backgroundTint="#000000"
                    app:backgroundTintMode="add" />
            </LinearLayout>
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/input"
            android:layout_width="397dp"
            android:layout_height="199dp"
            android:layout_weight="4"
            android:fontFamily="@font/aclonica"
            android:gravity="end"
            android:hint="“Smile at strangers and you just might change a life.”"
            android:textColor="#FBFBFB"
            android:textColorHint="@color/material_on_primary_emphasis_medium"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Result"
            android:layout_width="397dp"
            android:layout_height="64dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="1"
            android:fontFamily="@font/aclonica"
            android:gravity="end"
            android:hint="Answer"
            android:textColor="#FFFFFF"
            android:textColorHint="@color/material_on_primary_emphasis_medium"
            android:textSize="30sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>






